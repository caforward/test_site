Также уменьшить все шрифты до 16 пкс при 767>
Уменьшить на мобильных устройствах размер кнопки звонка до 50х50 пкс дочернему блоку установить высоту и ширину относитьно родительского блока 100% 
Уменишьть размер шрифта в копки и разер иконки трубик
<!--Accordion menu-->
    $(function foo() {
		var Accordion = function(el, multiple) {
            this.el = el || {};
            this.multiple = multiple || false;

            // Variables privadas
            var links = this.el.find('.link');
            // Evento
            links.on('click', {el: this.el, multiple: this.multiple}, this.dropdown)
        }
        Accordion.prototype.dropdown = function(e) {
            var $el = e.data.el;
            $this = $(this),
                $next = $this.next();

            $next.slideToggle(0);
            $this.parent().toggleClass('open');

            if (!e.data.multiple) {
                $el.find('.submenu').not($next).slideUp(0).parent().removeClass('open');
            };
        }
        var accordion = new Accordion($('#accordion-main'), false);
    });